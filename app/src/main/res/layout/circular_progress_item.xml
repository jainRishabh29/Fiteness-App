<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/cpi_circularProgressBar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginHorizontal="4dp"
        app:cpb_background_progressbar_color="@color/progress1_background"
        app:cpb_background_progressbar_width="2dp"
        app:cpb_progress="18"
        app:cpb_progress_direction="to_right"
        app:cpb_progressbar_color="@color/turquoise"
        app:cpb_progressbar_width="2dp"
        app:cpb_round_border="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cpi_weekday" />

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/cpi_circularProgressBar2"
        android:layout_width="12dp"
        android:layout_height="12dp"
        app:cpb_background_progressbar_color="@color/progress2_background"
        app:cpb_background_progressbar_width="2dp"
        app:cpb_progress="27"
        app:cpb_progress_direction="to_right"
        app:cpb_progressbar_color="@color/summer_sky"
        app:cpb_progressbar_width="2dp"
        app:cpb_round_border="true"
        app:layout_constraintBottom_toBottomOf="@id/cpi_circularProgressBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cpi_weekday" />

    <TextView
        android:id="@+id/cpi_weekday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:text="M"
        android:textColor="@color/text_color"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@id/cpi_circularProgressBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>